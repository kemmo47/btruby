    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
    //Set a daily entry limit
        var key = $('.total-entry').length;
        for(i=1; i<=key; i++) {
            const calo = $('#my_entry_daily'+i+' .content_calories');
            const pro = $('#my_entry_daily'+i+' .content_proteins');
            const carb = $('#my_entry_daily'+i+' .content_carbohydrates');
            const fat = $('#my_entry_daily'+i+' .content_fats');

            if(calo.text() > 3000){ 
                calo.css("color", "red");
            }

            if(pro.text().slice(0,-1) > 56){ 
                pro.css("color", "red");
            }

            if(carb.text().slice(0,-1) > 300){ 
                carb.css("color", "red");
            }else if( carb.text().slice(0,-1) < 130){
                carb.css("color", "#ffc107");
            }

            if(fat.text().slice(0,-1) > 60){ 
                fat.css("color", "red");
            }
        }
    //Set a daily entry limit 
    </script>

    <script type="text/javascript">
    //selected option is changed user
    $(document).ready(function() {
        var search = window.location.search;
        var id = search.slice(9);
        var x = $('.select_option_info_user option').length;
        for(i=0; i<x; i++) {
            var id_op = $('#option_user_'+i+'').val();
            if(id == id_op) {
                $('#option_user_'+i+'').attr('selected','');
            }
        }

        var u_id = $('#todo_user_id').val();
        if(u_id != id && id != ''){
            $('#todo_todos_content').prop('disabled', true);
            $('#button_create_todo').prop('disabled', true);
        }
    })
    //selected option is changed user
    </script>

    <script type="text/javascript"> 
    //Checkbox todos successfully selected
        function checkeduser(id){
            var checkBox = document.getElementById("check_todos_"+id+"");
            if ( checkBox.checked == true ){
                var text = $('#todos_content_'+id+'').text();
                toastr.success('successfully added todos information',text, {timeOut: 1500});
            }
        }
    //Checkbox todos successfully selected
    </script>

    <script type="text/javascript">
